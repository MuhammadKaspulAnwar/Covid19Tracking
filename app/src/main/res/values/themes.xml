<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BasicKotlin" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>



    <style name="Textview_Style">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">23dp</item>
    </style>

    <style name="Textview_provinsi">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16dp</item>
    </style>


    <style name="Textview_kalimat">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#5C5C5C</item>

    </style>

    <style name="Textview_Card">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/white</item>

    </style>


    <style name="Textview_indonesia">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="button">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>